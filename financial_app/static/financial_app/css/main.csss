/* main.css */

body {
  font-family: Arial, sans-serif;
  background-color: #f8f9fa;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: bold;
}

.container {
  margin-top: 30px;
}

.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}

.card:hover {
  transform: scale(1.03);
  transition: all 0.2s;
}

.footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #f8f9fa;
  text-align: center;
  padding: 10px;
}
